{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "dist/css/",
      "files": [{
        "destination": "ubie-design-tokens.css",
        "format": "css/variables",
        "options": {
          "outputReferences": true
        }
      }]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "dist/js/",
      "files": [{
        "destination": "ubie-design-tokens.js",
        "format": "javascript/module"
      }]
    }
  }
}
